<%- include("head.ejs") %>
<%- include("header.ejs") %>

<h2 style="text-align: center;">Edit Student</h2>

<form method="POST" action="/students/update/<%= student.id %>">
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
    <p>STUDENT INFORMATION:</p>
    <div>
        <label for="studentName">Student name:</label>
        <input type="text" id="studentName" name="studentName" value="<%= student ? student.studentName : '' %>"/>
    </div>
    <div>
        <label for="educationLevel">Education level:</label>
        <select id="educationLevel" name="educationLevel">
            <option value="beginner" <%= student && student.educationLevel === 'beginner' ? 'selected' : '' %>>Beginner</option>
            <option value="intermediate" <%= student && student.educationLevel === 'intermediate' ? 'selected' : '' %>>Intermediate</option>
            <option value="advanced" <%= student && student.educationLevel === 'advanced' ? 'selected' : '' %>>Advanced</option>
        </select>
    </div>
    <div>
        <label for="age">Age:</label>
        <input type="number" id="age" name="age" value="<%= student ? student.age : '' %>"/>
    </div>
    <p>PARENTS INFORMATION:</p>

    <div>
        <label for="fatherName">Father's Name:</label>
        <input type="text" id="fatherName" name="parents[father][name]" value="<%= student && student.parents && student.parents.father ? student.parents.father.name : '' %>"/>
    </div>
    <div>
        <label for="fatherEmail">Father's Email:</label>
        <input type="email" id="fatherEmail" name="parents[father][email]" value="<%= student && student.parents && student.parents.father ? student.parents.father.email : '' %>"/>
    </div>
    <div>
        <label for="fatherPhone">Father's Phone:</label>
        <input type="text" id="fatherPhone" name="parents[father][phone]" value="<%= student && student.parents && student.parents.father ? student.parents.father.phone : '' %>"/>
    </div>
    <div>
        <label for="motherName">Mother's Name:</label>
        <input type="text" id="motherName" name="parents[mother][name]" value="<%= student && student.parents && student.parents.mother ? student.parents.mother.name : '' %>"/>
    </div>
    <div>
        <label for="motherEmail">Mother's Email:</label>
        <input type="email" id="motherEmail" name="parents[mother][email]" value="<%= student && student.parents && student.parents.mother ? student.parents.mother.email : '' %>"/>
    </div>
    <div>
        <label for="motherPhone">Mother's Phone:</label>
        <input type="text" id="motherPhone" name="parents[mother][phone]" value="<%= student && student.parents && student.parents.mother ? student.parents.mother.phone : '' %>"/>
    </div>

    <p>ADDRESS INFORMATION:</p>
    <div>
        <label for="street">Street:</label>
        <input type="text" id="street" name="address[street]" value="<%= student && student.address ? student.address.street : '' %>"/>
    </div>
    <div>
        <label for="city">City:</label>
        <input type="text" id="city" name="address[city]" value="<%= student && student.address ? student.address.city : '' %>"/>
    </div>
    <div>
        <label for="zipCode">Zip Code:</label>
        <input type="text" id="zipCode" name="address[zipCode]" value="<%= student && student.address ? student.address.zipCode : '' %>"/>
    </div>
    <div>
        <label for="state">State:</label>
        <input type="text" id="state" name="address[state]" value="<%= student && student.address ? student.address.state : '' %>"/>
    </div>
    <div>
        <label for="country">Country:</label>
        <input type="text" id="country" name="address[country]" value="<%= student && student.address ? student.address.country : '' %>"/>
    </div>
    <p>SOCIAL LINKS:</p>
    <div>
        <label for="facebook">Facebook:</label>
        <input type="text" id="facebook" name="socialLinks[facebook]" value="<%= student && student.socialLinks ? student.socialLinks.facebook : '' %>"/>
    </div>
    <div>
        <label for="twitter">Twitter:</label>
        <input type="text" id="twitter" name="socialLinks[twitter]" value="<%= student && student.socialLinks ? student.socialLinks.twitter : '' %>"/>
    </div>
    <div>
        <label for="instagram">Instagram:</label>
        <input type="text" id="instagram" name="socialLinks[instagram]" value="<%= student && student.socialLinks ? student.socialLinks.instagram : '' %>"/>
    </div>
    <div>
        <label for="youtube">YouTube:</label>
        <input type="text" id="youtube" name="socialLinks[youtube]" value="<%= student && student.socialLinks ? student.socialLinks.youtube : '' %>"/>
    </div>
    <div>
        <button type="submit">Edit</button>
        <a href="/students">
            <button type="button">Cancel</button>
        </a>
    </div>
</form>

<%- include("footer.ejs") %>

<style>
  form {
    background-color: rgba(0, 0, 0, 0.8); 
    padding: 20px;
    border-radius: 10px; 
    width: 1000px;
    margin: 0 auto;
  }

  label {
    display: block; 
    margin-bottom: 10px;
  }

  input[type="text"],
  input[type="email"],
  input[type="number"],
  select,
  button[type="submit"],
  button[type="button"] {
    width: 100%;
    padding: 10px; 
    margin-bottom: 10px;
    box-sizing: border-box;
  }

  button[type="submit"],
  button[type="button"] {
    background-color: #333; /* Цвет фона кнопок */
    color: white; /* Цвет текста на кнопках */
    border: none; /* Убираем границу у кнопок */
    padding: 10px 20px; /* Отступы в кнопках */
    cursor: pointer; /* Изменение курсора при наведении */
    border-radius: 5px; /* Округляем углы кнопок */
  }

  button[type="submit"]:hover,
  button[type="button"]:hover {
    background-color: #555; /* Цвет фона кнопок при наведении */
  }
  p {
    text-align: center;
  }
</style>
